{
  "manifest_version": 3,
  "name": "Web Clipper for Obsidian",
  "version": "1.0.0",
  "description": "Clip web pages and save to Obsidian via Local REST API",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "commands": {
    "clip-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Clip current page to Obsidian"
    },
    "clip-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Clip selected text to Obsidian"
    }
  },
  "host_permissions": [
    "http://localhost:27123/*",
    "http://127.0.0.1:27123/*",
    "https://localhost:27124/*",
    "https://127.0.0.1:27124/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["shared/constants.js", "shared/utils.js", "lib/Readability.js", "content/content.js"],
      "css": ["styles/content.css"]
    }
  ]
}
